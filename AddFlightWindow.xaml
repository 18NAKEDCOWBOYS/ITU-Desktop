<Window x:Class="ITU_Desktop.AddFlightWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ITU_Desktop"
        xmlns:viewModels="clr-namespace:ITU_Desktop.ViewModels"
        mc:Ignorable="d"
        Title="AddFlightWindow" Height="450" Width="800"        
        d:DataContext="{d:DesignInstance viewModels:AddFlightWindowViewModel}">
    <Grid
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Content="Přidat" Command="{Binding CloseAddFlightWindowCommand}"/>
        <Button Grid.Row="1" Content="Zrušit"/>
    </Grid>
</Window>
